<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btndangnhap"
        android:layout_width="150dp"
        android:layout_height="44dp"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="53dp"
        android:background="#76AEE6"
        android:text="@string/dangnhap"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtnhap" />

    <Button
        android:id="@+id/bttaomapin"
        android:layout_width="150dp"
        android:layout_height="44dp"
        android:layout_marginStart="244dp"
        android:layout_marginLeft="244dp"
        android:layout_marginTop="53dp"
        android:background="#83ED5D"
        android:text="@string/taomapin"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtnhap" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="369dp"
        android:layout_height="84dp"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/baloo_thambi"
        android:text="Quản Lý Chi Tiêu"
        android:textColor="#F11010"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtnhap"
        android:layout_width="279dp"
        android:layout_height="54dp"
        android:layout_marginTop="56dp"
        android:background="@android:drawable/button_onoff_indicator_off"
        android:ems="10"
        android:gravity="center"
        android:hint="Nhập Mã Pin"
        android:inputType="text|textPassword"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.573"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>